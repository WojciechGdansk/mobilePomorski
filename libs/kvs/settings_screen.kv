<SettingsScreen>

    name: "SettingsScreen"
    id: dupa


    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        md_bg_color: 0, 0.5, 0.5, 1
        spacing: 20
        size: root.width, root.height

        MDBoxLayout:
            size_hint_y: 0.4
            md_bg_color: [0.89,0.12,0.545,1]


        MDTextField:
            id: from_email_address
            hint_text: "Z jakiego adresu wysłać wiadomość"
            halign: 'center'
            validator: 'email'
            required: True
            helper_text_mode: "on_error"
            helper_text: "Niepoprawny adres email"

        MDTextField:
            id: to_email_address
            hint_text: "Na jaki adres"
            font_size: 15
            color_mode: "custom"
            line_color_normal: 1, 0, 0, 1
            line_color_focus: 1, 0, 0, 1
            current_hint_text_color: 1,0,0,1
            halign: 'center'
            validator: 'email'
            required: True
            helper_text_mode: "on_error"
            helper_text: "Niepoprawny adres email"


        MDGridLayout:
            cols: 2

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10
                padding: [10,30,10,30]
                adaptive_height: True

                MDBoxLayout:
                    size_hint_x: 0.05


                MDRoundFlatButton:
                    id: move_back
                    text: "Wstecz"
                    text_color: "white"
                    md_bg_color: [0,1,0,1]
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}
                    on_press: root.manager.current = "StartScreen"

                MDBoxLayout:
                    size_hint_x: 0.05


            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10
                padding: [10,30,10,30]
                adaptive_height: True

                MDBoxLayout:
                    size_hint_x: 0.05


                MDRoundFlatButton:
                    id: save_details
                    text: "Zapisz"
                    text_color: "white"
                    md_bg_color: [0,1,0,1]
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}
                    on_press: root.save_email_details()


                MDBoxLayout:
                    size_hint_x: 0.05


        MDBoxLayout:
            size_hint_y: 0.4