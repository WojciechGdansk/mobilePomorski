<MDRoundFlatButton>
    text_color: "white"
    md_bg_color: [0,1,0,1]
    size_hint_x: 1


MDBoxLayout:
    orientation: 'vertical'
    padding: 20
    md_bg_color: [1,0,0,1]


    MDScreen:
        md_bg_color: [1,0,0,1]


        MDRoundFlatButton:
            id: fill_form
            text: "Wypełnij formularz"
            pos_hint: {"center_x": .5, "center_y": .6}

        MDRoundFlatButton:
            id: settings
            text: "Ustawienia"
            pos_hint: {"center_x": .5, "center_y": .5}


        MDRoundFlatButton:
            id: quit
            text: "Wyjście"
            pos_hint: {"center_x": .5, "center_y": .4}
            on_press: app.exit_func()
