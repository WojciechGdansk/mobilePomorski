#:import MDLabel kivymd.uix.label.MDLabel
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout

<RegionalLeagueScreen>

    name: "RegionalLeagueScreen"

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: (1,1)

