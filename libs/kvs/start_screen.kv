<StartScreen>

    name: 'StartScreen'

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size: root.width, root.height

        MDBoxLayout:
            size_hint_y: 0.2
            Image:
                source: "media/pom.png"


        MDRoundFlatButton:
            id: fill_form
            text: "Wypełnij formularz"
            text_color: "black"
            md_bg_color: [252/255,232/255,5/255,1]
            size_hint_x: 1
            pos_hint: {'center_x': 0.5}
            on_press: root.manager.current = "FourthLeagueScreen"

        MDRoundFlatButton:
            id: settings
            text: "Ustawienia"
            on_press: root.manager.current = "SettingsScreen"
            text_color: "black"
            md_bg_color: [252/255,232/255,5/255,1]
            size_hint_x: 1
            pos_hint: {'center_x': 0.5}

        MDRoundFlatButton:
            id: quit
            text: "Wyjście"
            on_press: app.exit_func()
            text_color: "black"
            md_bg_color: [252/255,232/255,5/255,1]
            size_hint_x: 1
            pos_hint: {'center_x': 0.5}

        MDBoxLayout:
            size_hint_y: 0.2
