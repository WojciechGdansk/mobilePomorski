<SettingsScreen>

    name: "SettingsScreen"

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size: root.width, root.height

        MDBoxLayout:
            size_hint_y: 1
            Image:
                source: "media/pom.png"


        MDTextField:
            id: from_email_address
            hint_text: "Z jakiego adresu wysłać wiadomość"
            halign: 'center'
            validator: 'email'
            required: True
            helper_text_mode: "on_error"
            helper_text: ""

        MDTextField:
            id: to_email_address
            hint_text: "Na jaki adres"
            halign: 'center'
            validator: 'email'
            required: True
            helper_text_mode: "on_error"
            helper_text: ""


        MDGridLayout:
            cols: 2

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10
                padding: [10,30,10,30]
                adaptive_height: True

                MDBoxLayout:
                    size_hint_x: 0.05


                MDRoundFlatButton:
                    id: move_back
                    text: "Wstecz"
                    text_color: "black"
                    md_bg_color: [252/255,232/255,5/255,1]
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}
                    on_press: root.manager.current = "StartScreen"

                MDBoxLayout:
                    size_hint_x: 0.05


            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10
                padding: [10,30,10,30]
                adaptive_height: True

                MDBoxLayout:
                    size_hint_x: 0.05


                MDRoundFlatButton:
                    id: save_details
                    text: "Zapisz"
                    text_color: "black"
                    md_bg_color: [252/255,232/255,5/255,1]
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}
                    on_press: root.save_email_details()


                MDBoxLayout:
                    size_hint_x: 0.05


        MDBoxLayout:
            size_hint_y: 0.2
