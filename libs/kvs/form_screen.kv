<FormScreen>

    name: "FormScreen"

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size: root.width, root.height

        MDBoxLayout:
            size_hint_y: 0.6
            Image:
                source: "media/pom.png"

        GridLayout:
            cols: 2

            MDLabel:
                text: "IV Liga"
                font_size: 30
                id: fourth_league
                text_size: self.width, None
                halign: 'center'
                text_color: 1,0,0,1

            MDCheckbox:
                group: 'league'
                on_active: root.checkboxes(fourth_league.text, *args)

            MDLabel:
                text: 'Klasa OkrÄ™gowa'
                font_size: 30
                id: regional_league
                text_size: self.width, None
                halign: 'center'
                text_color: 1,0,0,1


            MDCheckbox:
                group: 'league'
                on_active: root.checkboxes(regional_league.text, *args)

        MDRoundFlatButton:
            id: move_back
            text: "Wstecz"
            text_color: "black"
            md_bg_color: [252/255,232/255,5/255,1]
            size_hint_x: 0.5
            pos_hint: {'center_x': 0.5}
            on_press: root.manager.current = "StartScreen"