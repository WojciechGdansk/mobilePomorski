                    size_hint_x: 0.2

            MDBoxLayout:
                orientation: 'horizontal'

                MDLabel:
                    text: "Nosze i noszowi"
                    id: stretcher
                    text_size: self.width, None
                    halign: 'center'

                MDCheckbox:
                    group: 'stretcher'
                    on_active: root.checkboxes(True, *args)
                    size_hint_x: 0.2


                MDCheckbox:
                    group: 'stretcher'
                    on_active: root.checkboxes(False, *args)
                    size_hint_x: 0.2

            MDBoxLayout:
                orientation: 'horizontal'

                MDLabel:
                    text: "Ogrodzenie obszaru pola gry od widowni"
                    id: field_fenced
                    text_size: self.width, None
                    halign: 'center'

                MDCheckbox:
                    group: 'field_fenced'
                    on_active: root.checkboxes(True, *args)
                    size_hint_x: 0.2


                MDCheckbox:
                    group: 'field_fenced'
                    on_active: root.checkboxes(False, *args)
                    size_hint_x: 0.2

            MDBoxLayout:
                orientation: 'horizontal'

                MDLabel:
                    text: "Zabezpieczone przejście do obszaru pola gry"
                    id: secured_passage
                    text_size: self.width, None
                    halign: 'center'

                MDCheckbox:
                    group: 'secured_passage'
                    on_active: root.checkboxes(True, *args)
                    size_hint_x: 0.2


                MDCheckbox:
                    group: 'secured_passage'
                    on_active: root.checkboxes(False, *args)
                    size_hint_x: 0.2

            MDBoxLayout:
                orientation: 'horizontal'

                MDLabel:
                    text: "Inne uwagi"
                    id: other_remarks
                    text_size: self.width, None
                    halign: 'center'

                MDCheckbox:
                    group: 'other_remarks'
                    on_active: root.checkboxes(True, *args)
                    size_hint_x: 0.2


                MDCheckbox:
                    group: 'other_remarks'
                    on_active: root.checkboxes(False, *args)
                    size_hint_x: 0.2

            MDGridLayout:
                cols: 2

                MDBoxLayout:
                    orientation: 'horizontal'

                    MDBoxLayout:
                        size_hint_x: 0.05


                    MDRoundFlatButton:
                        id: move_back
                        text: "Wstecz"
                        text_color: "black"
                        md_bg_color: [252/255,232/255,5/255,1]
                        size_hint_x: 1
                        pos_hint: {'center_x': 0.5}
                        on_press: root.manager.current = "MatchInfoScreen"

                    MDBoxLayout:
                        size_hint_x: 0.05


                MDBoxLayout:
                    orientation: 'horizontal'

                    MDBoxLayout:
                        size_hint_x: 0.05


                    MDRoundFlatButton:
                        id: save_details
                        text: "Zapisz"
                        text_color: "black"
                        md_bg_color: [252/255,232/255,5/255,1]
                        size_hint_x: 1
                        pos_hint: {'center_x': 0.5}
                        on_press: root.save_details()


                    MDBoxLayout:
                        size_hint_x: 0.05


            MDBoxLayout:
                orientation: 'horizontal'
                id: missing_fields_layout
                size_hint_y: None
                height: 300
                spacing: 10

                MDBoxLayout:
                    size_hint_x: 0.05

                Label:
                    id: missing_fields
                    text_size: self.width, None
                    color: (1,0,0,1)
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}

                MDBoxLayout:
                    size_hint_x: 0.05