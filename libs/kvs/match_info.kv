<MatchInfoScreen>

    name: "MatchInfoScreen"

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size: root.width, root.height

        MDBoxLayout:
            size_hint_y: 0.2
            Image:
                source: 'media/pom.png'

        MDTextField:
            id: home_team
            hint_text: "Gospodarze"
            halign: 'center'
            required: True
            helper_text_mode: "on_error"
            helper_text: ""

        MDTextField:
            id: away_team
            hint_text: "Goście"
            halign: 'center'
            required: True
            helper_text_mode: "on_error"
            helper_text: ""


        MDGridLayout:
            cols: 3
            adaptive_height: True

            MDRoundFlatButton:
                text: "Wybierz datę"
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release: root.show_date_picker()
                text_color: "black"
                md_bg_color: [252/255,232/255,5/255,1]

            MDBoxLayout:
                size_hint_x: 0.05

            MDTextField:
                id: selected_date
                #pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint_x: 0.5
                error: False
                required: True
                helper_text_mode: "on_error"
                helper_text: ""

        MDBoxLayout:
            size_hint_y: 0.2

        MDGridLayout:
            cols: 3
            adaptive_height: True

            MDRoundFlatButton:
                id: move_back
                text: "Wstecz"
                text_color: "black"
                md_bg_color: [252/255,232/255,5/255,1]
                size_hint_x: 0.5
                pos_hint: {'center_x': 0.5}
                on_press: root.manager.current = "FormScreen"

            MDBoxLayout:
                size_hint_x: 0.05

            MDRoundFlatButton:
                id: save_details
                text: "Dalej"
                text_color: "black"
                md_bg_color: [252/255,232/255,5/255,1]
                size_hint_x: 0.5
                pos_hint: {'center_x': 0.5}
                on_press: root.save_data()



        MDBoxLayout:
            size_hint_y: 0.1
