<SettingsScreen>

    name: "SettingsScreen"

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        md_bg_color: 0, 0.5, 0.5, 1
        spacing: 20
        size: root.width, root.height

        MDBoxLayout:
            size_hint_y: 0.4
            md_bg_color: [0.89,0.12,0.545,1]

        MDGridLayout:
            cols: 2

            MDLabel:
                id: fill_form
                text: "CO TO JEST"
                color: 0.24, 0.3, 1, 1
                halign: 'center'
                md_bg_color: 0.498, 0.789, 0.898, 1

            MDLabel:
                id: fill_form
                text: "druga kolumna"
                color: 0.57, 0.12, 1, 1
                halign: 'center'
                md_bg_color: 0.8, 0.489, 0.598, 1

            MDLabel:
                id: fill_form
                text: "drugi wiersz"
                color: 0.24, 0.3, 1, 1
                halign: 'center'
                md_bg_color: 0.198, 0.729, 0.458, 1

            MDLabel:
                id: fill_form
                text: "druga kolumna"
                color: 0.57, 0.12, 1, 1
                halign: 'center'
                md_bg_color: 0.128, 0.129, 0.888, 1

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10
                padding: [10,30,10,30]
                adaptive_height: True

                MDBoxLayout:
                    size_hint_x: 0.05


                MDRoundFlatButton:
                    id: move_back
                    text: "Wstecz"
                    text_color: "white"
                    md_bg_color: [0,1,0,1]
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}
                    on_press: root.manager.current = "StartScreen"

                MDBoxLayout:
                    size_hint_x: 0.05


            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10
                padding: [10,30,10,30]
                adaptive_height: True

                MDBoxLayout:
                    size_hint_x: 0.05


                MDRoundFlatButton:
                    id: save_details
                    text: "Zapisz"
                    text_color: "white"
                    md_bg_color: [0,1,0,1]
                    size_hint_x: 1
                    pos_hint: {'center_x': 0.5}

                MDBoxLayout:
                    size_hint_x: 0.05







        MDBoxLayout:
            size_hint_y: 0.4